#include <iostream>
#include <string> // string을 사용하려면 <string> 헤더를 포함하는 것이 좋습니다.

using namespace std;

class Car{
public:
    int speed;
    string brand;
    Car(){
        brand = "현대";
    }
    virtual void run(){
        cout << "차가 달린다~!" << endl;
    }
};
class SuperCar : public Car{
public:
    int booster;
    SuperCar(){
        booster = 100;
    }

   
    void run() override {
        cout << booster << "용량으로 SuperCar가 달린다~!" << endl;
        cout << "브랜드 : " << brand << endl;
    }

};

int main()
{
    // Car car;
    // car.run();
    
    SuperCar car2;
    car2.run();
    return 0;
}
