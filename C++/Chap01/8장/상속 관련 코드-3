#include <iostream>
#include <string> // string을 사용하려면 <string> 헤더를 포함하는 것이 좋습니다.
#include <memory>
// #include <cs 

using namespace std;

class Shape{
public:
    virtual void draw(){
        cout << "도형을 그리다." << endl;
    }
    
};
class Triangle : public Shape{
public:
    void draw() override{
        cout << "삼각형을 그리다." << endl;
    }
};
class Rectangle : public Shape{
public:
    void draw() override{
        cout << "사각형을 그리다." << endl;
    }
};
class Circle : public Shape{
public:
    void draw() override{
        cout << "원을 그리다." << endl;
    }
};

int main()
{
    // Shape* s = new Shape;
    // Triangle* t = new Triangle;
    // Rectangle* r = new Rectangle;
    // Circle* c = new Circle;

    // Shape* s = new Shape; //부모 클래스의 포인터로 자식 클래스에 엑세스가 가능하다.
    // Shape* t = new Triangle;
    // Shape* r = new Rectangle;
    // Shape* c = new Circle;

    Shape* shape[4]; //(1) 배열 선언
    shape[0] = new Shape; //요소는 집적 만들어야 함
    shape[1] = new Triangle;
    shape[2] = new Rectangle;
    shape[3] = new Circle;

    for(Shape* s : shape){
        s->draw();
    }

    for(int i = 0; i < 4; i++){
        delete shape[i];
    }

    // Shape* s1 = new Shape;
    // Shape* s2 = new Triangle;
    // Shape* s3 = new Rectangle;
    // Shape* s4 = new Circle;  

    // s->draw();
    // t->draw();
    // r->draw();
    // c->draw();

    // s1->draw();
    // s2->draw();
    // s3->draw();
    // s4->draw();

    // delete s;
    // delete t;
    // delete r;
    // delete c;

    // delete s1;
    // delete s2;
    // delete s3;
    // delete s4;

    return 0;
}

