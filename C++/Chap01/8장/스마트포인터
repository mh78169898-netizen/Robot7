#include <iostream>
#include <cstdlib>
#include <memory>
using namespace std;

class Hero
{
private:
    string treasure; // 클래스 내부에서만 접근 가능
protected: //자식(파생) 클래스에서만 직접 접근 가능 (외부에서는 private와 동일)
    int level;
    string name;
public:
    int mp;

    Hero(){
        treasure = "보물";
        level = 1;
        name = "영웅";
        mp = 10;
    }
    string getName(){
        return name;
    }
    string getTreasuer(){
        return treasure;
    }
    int getLevel(){
        return level;
    }
};
class Wizard:public Hero
{
public:
    Wizard(){
        name = "마법사";
        level = 5;
    }

    void showLevel(){
        cout << level << endl;
    }
    void showName(){
        cout << name << endl;
    }
};



int main()//또 다른 외부 클래스처럼 생각해야 한다.
{
    unique_ptr<Hero> jack = make_unique<Hero>();
    cout << jack->getName() << endl;
    cout << jack->getLevel() << endl;
    cout << jack->getTreasuer() << endl;

    unique_ptr<Wizard> geralt = make_unique<Wizard>();
    geralt->showLevel();
    geralt->showName();

    return 0;
}

클래스 내부,상속받은 자식 클래스,클래스 외부 (main 등)
private,O,X,X
protected,O,O,X
public,O,O,O
