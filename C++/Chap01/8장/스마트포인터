#include <iostream>
#include <cstdlib>
#include <memory>
using namespace std;

class Hero
{
private:
    string treasure;
protected: //부모,자식 간에만 public으로 취급
    int level;
    string name;
public:
    int mp;

    Hero(){
        treasure = "보물";
        level = 1;
        name = "영웅";
        mp = 10;
    }
    string getName(){
        return name;
    }
    string getTreasuer(){
        return treasure;
    }
    int getLevel(){
        return level;
    }
};
class Wizard:public Hero
{
public:
    Wizard(){
        name = "마법사";
        level = 5;
    }

    void showLevel(){
        cout << level << endl;
    }
    void showName(){
        cout << name << endl;
    }
};



int main()//또 다른 외부 클래스처럼 생각해야 한다.
{
    unique_ptr<Hero> jack = make_unique<Hero>();
    cout << jack->getName() << endl;
    cout << jack->getLevel() << endl;
    cout << jack->getTreasuer() << endl;

    unique_ptr<Wizard> geralt = make_unique<Wizard>();
    geralt->showLevel();
    geralt->showName();

    return 0;
}
