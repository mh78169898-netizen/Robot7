#include <iostream>
using namespace std;

class Shape{
public:
    int linethick;
    Shape(){
        linethick = 1;
    }
    virtual void draw(){
        cout << "도형을 그리다." << endl;
    }

};
class Circel : public Shape{
public:
    void draw() override {
        cout << "원을 그리다." << endl;
    }
};
class Triangle : public Shape{
public:
    void draw() override {
        cout << "삼각형을 그리다." << endl;
    }
};
int main()
{
    Shape shape;
    shape.draw();

    Circel circel;
    circel.draw();
    Triangle tri;
    tri.draw();
    return 0;
}
