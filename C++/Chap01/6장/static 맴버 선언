#include <iostream>
#include <cstdlib>
#include <memory>
using namespace std;

class Person
{
    public:
        int money = 0;
        static int sharedMoney;

        Person() {
            money++;
            sharedMoney++;
        }   
};
int Person::sharedMoney = 10000;// 이렇게 외부 선언을 안해주면 오류가 발생

int main()
{
    Person p1;
    cout << p1.sharedMoney << ":" << p1.money << endl;

    Person p2;
    cout << p2.sharedMoney << ":" << p2.money << endl;

    Person p3;
    cout << p3.sharedMoney << ":" << p3.money << endl;

    return 0;
}
