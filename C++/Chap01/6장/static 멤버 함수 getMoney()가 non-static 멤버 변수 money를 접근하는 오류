#include <iostream>
#include <cstdlib>
#include <memory>
using namespace std;

class PersonError {
	int money;
    static inline int staticMoney = 0; //C++17부터 inline 사용 가능
public:
	static int getStaticMoney() { //static 맴버 함수에서는 static 맴버에만 접근 가능
        //return money; //컴파일 오류: static 맴버 함수에서는 non-static 맴버에 접근 불가
        staticMoney = 100;
        //this->staticMoney = 100; //money변수일때 error
        return staticMoney;
    } //error

	void setMoney(int money) { // 정상 코드(non-static 맴버 함수는 둘 다 접근 가능)
		this->money = money;
        staticMoney += money;
	}
    int getMoney(){
        this->staticMoney = 100;
        return money;
    }
};

int main(){
	int n = PersonError::getStaticMoney();

	PersonError pr;
	pr.setMoney(1000);
    cout << "money: " << pr.getMoney() << endl;
    return 0;
}
