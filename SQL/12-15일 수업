---테이블 생성하기---
CREATE TABLE "Person" (
	"ID"	INTEGER NOT NULL,
	"Name"	INTEGER NOT NULL,
	"Birthday"	TEXT,
	PRIMARY KEY("ID" AUTOINCREMENT)
);

---student 테이블 생성하기 ---
CREATE TABLE "Student" (
	"SN"	INTEGER NOT NULL,
	"NAME"	INTEGER NOT NULL,
	"ADDRESS"	TEXT NOT NULL,
	PRIMARY KEY("SN" AUTOINCREMENT)
);

---데이터 삽입---
INSERT INTO Person (Name, Birthday)
VALUES ('유재석', '1970-01-01')

INSERT INTO Person (Name, Birthday)
VALUES ('강호동', '1965-12-01');

INSERT INTO Person (Name, Birthday)
VALUES ('신동엽', '1960-09-30');

---테이블 조회---
SELECT *  FROM Person

SELECT Name  FROM Person ORDER by Name; (이름 기준 오름차순)
SELECT Name  FROM Person ORDER by Name DESC; (이름 기준 내림차순(역순))

---테이블 갱신---
UPDATE Person SET Name = '강감찬' WHERE ID = 2; (ID가 2인 테이블의 Name을 '강감찬'으로 갱신)

---테이블 삭제---
DELETE FROM Person WHERE Name = '신동엽'; (Name가 '신동엽'인 테이블 삭제)

---테이블 구조 수정/컬럼 추가---
ALTER TABLE Person ADD COLUMN New INTEGER;

---테이블 구조 보기(SQLite에서)---
PRAGMA table_info(Person);

---테이블 수정,확인---
UPDATE Person SET New = '175' WHERE ID = 1;
UPDATE Person SET New = '160' WHERE NAME = '지선';
UPDATE Person SET New = '164' WHERE Birthday = '1992-3-13';
UPDATE Person SET New = '180' WHERE NAME = '강감찬';

SELECT * FROM Person;

---테이블의 컬럼명 변경---
ALTER TABLE Person RENAME COLUMN New To Height;




-라면(Ramen) 테이블 만들기-
1.상품 ID = product_id
2.상품이름 = product_name
3.생산날짜 = date - Text(sqlite한정)
4.맛 = variant-text
5.무게 = weight - real(integer)
6. ......

테이블 코드
CREATE TABLE "Ramen" (
	"product_id"	INTEGER NOT NULL,
	"product_name"	TEXT NOT NULL,
	"date"	TEXT NOT NULL,
	"gram"	REAL NOT NULL,
	PRIMARY KEY("product_id" AUTOINCREMENT)
);

INSERT INTO Ramen (product_name, date, gram)
VALUES ('튀김라면', '2025-12-16', 19.8),
('안성탕면', '2025-12-16', 20.4)

SELECT * FROM Ramen;
연습 문제 1번 답
SELECT * FROM Person WHERE Birthday IS NOT NULL ORDER BY Birthday ASC ;

2번 답
UPDATE Person SET Name = '유라'
WHERE Name LIKE '김%';

연습문제 답
PRAGMA table_info(person);

ALTER TABLE Person ADD COLUMN Weight INTEGER;

ALTER TABLE Person DROP COLUMN Weight;

SELECT * FROM City
--인구가 100만 이상, 크기가 500Km2 이상인 도시는?
WHERE Population >= 1000000 And AreaKm2 >= 700;
